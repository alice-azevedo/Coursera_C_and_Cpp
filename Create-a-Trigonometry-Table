#include <stdio.h>
#include <math.h>

/* creates the trigonomic table for 5 angles */
void table() {

	int steps = 5;

	for (int i = 0; i <=steps; i++) {
	
		double angle = (double)i / steps;

		printf("Angle: .2f, Sine: %.4f, Cosine: %.4f\n", angle, sin(angle), cos(angle));

	}
}

int main(void) {

	table();

	return 0;
}
